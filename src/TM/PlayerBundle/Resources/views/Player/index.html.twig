<h1>Player list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Name</th>
            <th>Birthday</th>
            <th>Street</th>
            <th>Streetnumber</th>
            <th>Zip</th>
            <th>City</th>
            <th>Mobile</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Sportdata</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('player_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.name }}</td>
            <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.street }}</td>
            <td>{{ entity.streetNumber }}</td>
            <td>{{ entity.zip }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.mobile }}</td>
            <td>{{ entity.phone }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.sportdata }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('player_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('player_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('player_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
